{
  "compilerOptions": {
      "target": "es6",
      "declaration": false,
      "removeComments": true,
      "sourceMap": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "commonjs",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "baseUrl": ".",
      "useUnknownInCatchVariables": false,
      "inlineSources": true,
      "noEmitOnError": true,
      "strictNullChecks": true,
      "resolveJsonModule": true,
      "sourceRoot": "/src",
      "outDir": "dist",
      "typeRoots": ["./src/@types", "./node_modules/@types"]
  }
}
